# RustDesk Server Configuration Example
# Copy this file to .env and modify the values according to your setup

# Timezone
TZ=Asia/Istanbul

# Server URLs (IMPORTANT: Change these to your actual domain)
DOMAIN=your-domain.com
API_SERVER=http://your-domain.com:21114
ID_SERVER=your-domain.com:21116
RELAY_SERVER=your-domain.com:21117

# Port Configuration
API_PORT=21114
NAT_PORT=21115
ID_PORT=21116
RELAY_PORT=21117
WS_PORT=21118
FILE_PORT=21119

# Security Settings
ENCRYPTED_ONLY=1
MUST_LOGIN=N
JWT_KEY=your_secure_jwt_key_here_min_32_chars

# Language Settings (en, tr, de, fr, etc.)
LANG=en

# Logging Level (debug, info, warn, error)
RUST_LOG=info

# Admin Configuration
ADMIN_USER=admin
ADMIN_EMAIL=admin@your-domain.com

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30